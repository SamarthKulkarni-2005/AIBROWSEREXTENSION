{
  "manifest_version": 3,
  "name": "AI Productivity Assistant",
  "version": "2.0",
  "description": "AI-powered webpage summarization, question answering, and productivity tracking",

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": ["activeTab", "scripting", "storage", "tabs"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
